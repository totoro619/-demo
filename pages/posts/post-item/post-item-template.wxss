.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  background-color: #fff;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  padding-bottom: 5px
}

.post-author-date {
  margin: 10rpx 0 10rpx 10px
}

.post-author{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle
}

.post-date {
  margin-left: 20rpx;
  vertical-align: middle;
  font-size: 26rpx
}

.post-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #666;
  margin-left: 10px;
  margin-bottom: 10px
}

.post-image {
  width: 100%;
  height: 340rpx;
  margin: auto 0;
  margin-bottom: 10px
}

.post-content{
  color: #666;
  font-size: 24rpx;
  line-height: 40rpx;
  letter-spacing: 2rpx;
  margin-bottom: 10rpx;
  margin-left: 10rpx
}

.post-like{
  font-size: 13px;
  line-height: 16px;
  margin-left: 10px
}

.post-like-image{
  width: 16px;
  height: 16px;
  margin-right: 8px;
  vertical-align: middle
}

.post-like-font{
  margin-right: 20px;
  vertical-align: middle
}