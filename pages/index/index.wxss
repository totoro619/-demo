/**index.wxss**/

page {
  height: 100%;
  background-color: #b3d4db;
}

.container{
   align-items: center;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 200rpx
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin-top: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  margin-top: 80rpx;
  font-size: 32rpx;
  font-weight: bold;
}

 .usermotto {
  margin-top:200rpx; 
  width: 200rpx;
  height: 80rpx;
  border: 1px solid #405f80;
  border-radius: 5px;
  text-align: center;
} 

.user-motto {
  font-size: 24rpx;
  font-weight: bold;
  line-height: 80rpx;
}
